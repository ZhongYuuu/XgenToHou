<fragment uiName="xgenFacingCameraVSToGSPw" name="xgenFacingCameraVSToGSPw" type="interpolant" class="ShadeFragment" version="1.0" feature_level="0" >
    <description>
        <![CDATA[
XGen face camera spline vertex position generator]]>
    </description>
    <properties>
        <float3   name="Pm"     semantic="Pm"     flags="varyingInputParam" />
