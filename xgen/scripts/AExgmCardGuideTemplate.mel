global proc AExgmCardGuideTemplate(string $nodeName)
{
    editorTemplate -beginScrollLayout;

    // include/call base class/node attributes
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kBboxCorner1")) "bboxCorner1";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kBboxCorner2")) "bboxCorner2";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kToMakeGuide")) "toMakeGuide";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kFaceId")) "faceId";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kULoc")) "uLoc";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kVLoc")) "vLoc";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kBlend")) "blend";
    editorTemplate -addControl -label (uiRes("m_AExgmCardGuideTemplate.kInterp")) "interp";

    editorTemplate -suppress "inputMesh";
    editorTemplate -suppress "cachedMesh";

    AExgmSuppressShape;

    editorTemplate -addExtraControls;
    editorTemplate -endScrollLayout;
}
