/**
 * Cleanup anything iGroom added to the environment in preparation for the
 * plugin to be unloaded.
 */
global proc igCleanup()
{
    // Get a list of all scriptjobs
    string $ascriptjobs[] = `scriptJob -lj`;
    for ( $sj in $ascriptjobs )
    {
        // Find iGroom related scriptjobs
        if ( `match "ig" $sj` != "" )
        {
            string $aTok[] = {};
            tokenize $sj " " $aTok;
            string $strjob = `substitute ":" $aTok[0] ""`;
            int $njob = $strjob;
            // Force-kill iGroom related script jobs
            catch( `scriptJob -force -k $njob` );
        }
    }

    // Remove our shelf buttons
    if (`shelfButton -ex -q "iGroomUIButton"`)
        deleteUI -control "iGroomUIButton";
    global string $gIgBrushList[];
    for ( $item in $gIgBrushList ) {
        string $bname = "igBrush" + $item + "ShelfButton";
        if (`shelfButton -ex -q $bname`)
            deleteUI -control $bname;
    }

    // Delete the UI if still up
    if (`window -exists iGroomWindow`) {
        deleteUI -window iGroomWindow;
    }
}
